<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="../css/style.css">

    <link rel="stylesheet" href="../css/searchbar.css">
    <link rel="stylesheet" href="../css/bookmarks.css">
    <script src="https://kit.fontawesome.com/f363f12a18.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" ></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js" ></script>
    <title>Favourites</title>
</head>
<body>

  <%- include('partials/loading') %>
  <%- include('partials/navbar') %>

  <h1 class="bookmarked-heading">Bookmarked Articles</h1>


   <%- include('partials/searchbar') %>


  <% if(bookmarked_data.length!=0) { %>
     <%- include('partials/cursor') %>


     <div class="cards">

      <% bookmarked_data.forEach(data => { %>

        <div id="<%= data['id'] %>" class="card">
          <div class="bookmark-image-container">
            <img class="card-img-top" src="<%= data["image_link"] %>" alt="Card image cap">
          </div>

          <div class="card-body">

            <div class="body-top">
          <h2 class="card-title">
          <%= data["title"] %>
          </h2>
          <!-- <p class="card-text">
           <%- data['content'].substring(0,100) %>...
            </p> -->
                <h6 class="writtenby">
             Written by : <%= data["author_name"] %>
             </h6>
            <h8 class="date-part">
              Posted on:  <%= data["date_of_publish"].getDate() %>-<%= data['date_of_publish'].getMonth()+1%>-<%= data['date_of_publish'].getFullYear() %>
              </h8>
            </div>


            <a  data-bookmarkid="<%= data['id'] %>" href="javascript:void(0)"   class="remove_bookmarks_link">
          <button class="remove-from-bookmarks">Remove From Bookmarks</button>
            </a>

          </div>
        </div>

      <% }) %>

      </div>
      <% } %>

       <div class="not_available" style="height: 300px;text-align: center;display:none;align-items: center;justify-content: center;flex-direction: column;">
          <img src="../images/null.png" alt="">
       </div>
       

      <%- include('partials/footer') %>

      <script src="../js/cursor.js"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
      <script src="../js/navbar.js"></script>
      <script src="../js/bookmarks.js"></script>
</body>
</html>